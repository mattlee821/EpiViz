citHeader("To cite EpiCircos please use the following and also cite the circlize package and the ComplexHeatmap package if using the legend function:")

citEntry(
  entry    = "Misc",
  title    = "EpiCircos: An implementation of Circos plots for epidemiologists",
  author   = "Matthew A Lee",
  year     = "2019",
  url      = "https://github.com/mattlee821/EpiCircos",
  textVersion = "Lee, MA. (2019) EpiCircos: An implementation of Circos plots for epidemiologists, Available at https://github.com/mattlee821/EpiCircos"
)

